---
import Layout from '../layouts/Layout.astro';

const posts = [
  {
    title: 'The Art of Custom Carpentry',
    excerpt: 'Discover the craftsmanship and attention to detail that goes into every custom carpentry project.',
    date: '2024-02-15',
    image: '/blog/carpentry.jpg'
  },
  {
    title: 'Home Renovation Tips',
    excerpt: 'Essential tips for planning your next home renovation project and ensuring its success.',
    date: '2024-02-01',
    image: '/blog/renovation.jpg'
  },
  {
    title: 'Choosing the Right Wood',
    excerpt: 'A guide to selecting the perfect wood type for your custom furniture or building project.',
    date: '2024-01-15',
    image: '/blog/wood.jpg'
  }
];
---

<Layout title="Blog - Core Contracting">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-display text-center mb-4">Our Blog</h1>
    <p class="text-center text-lg mb-12 max-w-2xl mx-auto">
      Insights, tips, and updates from the world of carpentry and contracting
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <article class="bg-white dark:bg-primary-800 rounded-lg shadow-lg overflow-hidden">
          <div class="h-48 bg-primary-200 dark:bg-primary-700"></div>
          <div class="p-6">
            <div class="text-sm text-primary-500 dark:text-primary-400 mb-2">
              {new Date(post.date).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              })}
            </div>
            <h2 class="text-xl font-bold mb-2">{post.title}</h2>
            <p class="text-primary-600 dark:text-primary-300 mb-4">{post.excerpt}</p>
            <a
              href={`/blog/${post.title.toLowerCase().replace(/\s+/g, '-')}`}
              class="text-wood-dark dark:text-wood-light hover:underline"
            >
              Read More â†’
            </a>
          </div>
        </article>
      ))}
    </div>

    <div class="mt-12 text-center">
      <button
        class="bg-wood-dark hover:bg-wood text-white px-8 py-3 rounded-lg transition-colors"
      >
        Load More Posts
      </button>
    </div>
  </div>
</Layout>