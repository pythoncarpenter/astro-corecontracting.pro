---
import Layout from '../layouts/Layout.astro';

/** 
 * We move your `clientScript` logic into a normal <script> block 
 * with `is:client`. This ensures Astro bundles and hydrates it 
 * properly on the client side.
 */
---

<Layout title="Contact Us - Core Contracting">
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-display text-center mb-4">Contact Us</h1>
    <p class="text-center text-lg mb-12 max-w-2xl mx-auto">
      Get in touch for a free quote or to discuss your project
    </p>

    <!-- We wrap the left & right columns in #contact-grid for fade-out on submit -->
    <div
      id="contact-grid"
      class="grid grid-cols-1 md:grid-cols-2 gap-12 transition-opacity duration-300"
    >
      <!-- LEFT COLUMN: Contact Form -->
      <div class="bg-white dark:bg-primary-800 p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
        <form
        id="contact-form"
        class="space-y-4"
        method="POST"
        action="#"
        >
        <div>
            <label class="block text-sm font-medium mb-1" for="name">
              Name
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2 rounded-lg border border-primary-300 dark:border-primary-600 focus:ring-2 focus:ring-wood-light dark:bg-primary-700"
            />
          </div>
          <div>
            <label class="block text-sm font-medium mb-1" for="email">
              Email
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 rounded-lg border border-primary-300 dark:border-primary-600 focus:ring-2 focus:ring-wood-light dark:bg-primary-700"
            />
          </div>
          <div>
            <label class="block text-sm font-medium mb-1" for="phone">
              Phone
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="w-full px-4 py-2 rounded-lg border border-primary-300 dark:border-primary-600 focus:ring-2 focus:ring-wood-light dark:bg-primary-700"
            />
          </div>
          <div>
            <label class="block text-sm font-medium mb-1" for="message">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full px-4 py-2 rounded-lg border border-primary-300 dark:border-primary-600 focus:ring-2 focus:ring-wood-light dark:bg-primary-700"
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-wood-dark hover:bg-wood text-white px-6 py-3 rounded-lg transition-colors"
          >
            Send Message
          </button>
        </form>
      </div>

      <!-- RIGHT COLUMN: Contact Info / Follow Us / Hours -->
      <div class="space-y-8">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-bold mb-4">Contact Information</h2>
          <div class="space-y-4">
            <!-- Phone -->
            <div class="flex items-center">
              <svg
                class="h-6 w-6 text-wood-dark dark:text-wood-light mr-3"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                />
              </svg>
              <a
                href="tel:+17054987194"
                class="hover:text-wood-dark dark:hover:text-wood-light"
              >
                (705) 498-7194
              </a>
            </div>
            <!-- Email -->
            <div class="flex items-center">
              <svg
                class="h-6 w-6 text-wood-dark dark:text-wood-light mr-3"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
              <a
                href="mailto:mitch.mcquoid@gmail.com"
                class="hover:text-wood-dark dark:hover:text-wood-light"
              >
                mitch.mcquoid@gmail.com
              </a>
            </div>
            <!-- Location -->
            <div class="flex items-center">
              <svg
                class="h-6 w-6 text-wood-dark dark:text-wood-light mr-3"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                />
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                />
              </svg>
              <span>North Bay, Ontario</span>
            </div>
          </div>
        </div>

        <!-- Follow Us -->
        <div>
          <h2 class="text-2xl font-bold mb-4">Follow Us</h2>
          <div class="flex space-x-4 mb-6">
            <a
              href="https://www.facebook.com/corecontractingproMain"
              target="_blank"
              rel="noopener noreferrer"
              class="text-primary-600 dark:text-primary-300 hover:text-wood-dark dark:hover:text-wood-light"
            >
              <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z"/>
              </svg>
            </a>
            <a
              href="https://www.instagram.com/corecontracting.pro"
              target="_blank"
              rel="noopener noreferrer"
              class="text-primary-600 dark:text-primary-300 hover:text-wood-dark dark:hover:text-wood-light"
            >
              <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2c2.717 0 3.056.01 4.122.06 1.065.05 1.79.217 2.428.465.66.254 1.216.598 1.772 1.153a4.908 4.908 0 011.153 1.772c.247.637.415 1.363.465 2.428.047 1.066.06 1.405.06 4.122 0 2.717-.01 3.056-.06 4.122-.05 1.065-.218 1.79-.465 2.428a4.883 4.883 0 01-1.153 1.772 4.915 4.915 0 01-1.772 1.153c-.637.247-1.363.415-2.428.465-1.066.047-1.405.06-4.122.06-2.717 0-3.056-.01-4.122-.06-1.065-.05-1.79-.218-2.428-.465a4.89 4.89 0 01-1.772-1.153 4.904 4.904 0 01-1.153-1.772c-.248-.637-.415-1.363-.465-2.428C2.013 15.056 2 14.717 2 12c0-2.717.01-3.056.06-4.122.05-1.066.217-1.79.465-2.428a4.88 4.88 0 011.153-1.772A4.897 4.897 0 015.45 2.525c.638-.248 1.362-.415 2.428-.465C8.944 2.013 9.283 2 12 2zm0 5a5 5 0 100 10 5 5 0 000-10zm6.5-.25a1.25 1.25 0 10-2.5 0 1.25 1.25 0 002.5 0zM12 9a3 3 0 110 6 3 3 0 010-6z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Business Hours -->
        <div class="bg-primary-100 dark:bg-primary-700 p-6 rounded-lg">
          <h2 class="text-2xl font-bold mb-4">Business Hours</h2>
          <ul class="space-y-2">
            <li class="flex justify-between">
              <span>Monday - Friday</span>
              <span>8:00 AM - 6:00 PM</span>
            </li>
            <li class="flex justify-between">
              <span>Saturday</span>
              <span>By Appointment</span>
            </li>
            <li class="flex justify-between">
              <span>Sunday</span>
              <span>Closed</span>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- RESULT BOX (Hidden by default; shown on success/failure) -->
    <div
      id="result-box"
      class="hidden opacity-0 transition-opacity duration-300 bg-primary-100 dark:bg-primary-800 p-8 mt-8 rounded-lg text-center max-w-xl mx-auto"
    >
      <h2 class="text-2xl font-bold mb-4">Status</h2>
      <p id="status-text" class="text-lg"></p>
    </div>
  </div>

  <!-- 2) Use an Astro client script to ensure it runs in the browser -->
  <script is:client>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('contact-form');
      const gridWrapper = document.getElementById('contact-grid');
      const resultBox = document.getElementById('result-box');
      const statusText = document.getElementById('status-text');

      form.addEventListener('submit', async (e) => {
        e.preventDefault(); // Prevent full-page reload

        // Collect form data
        const formData = new FormData(form);

        try {
          // POST to /api/contact
          const response = await fetch('/api/contact', {
            method: 'POST',
            body: formData,
          });
          const data = await response.json();

          if (response.ok && data.success) {
            // SUCCESS: fade out the form grid, fade in the result box
            gridWrapper.classList.add('opacity-0', 'pointer-events-none');
            setTimeout(() => {
              gridWrapper.classList.add('hidden');
              resultBox.classList.remove('hidden');
              setTimeout(() => {
                resultBox.classList.remove('opacity-0');
              }, 50);
            }, 300);

            statusText.textContent = 'Thank you! Your message was sent.';
          } else {
            // Server responded but indicated an error
            throw new Error(data.message || 'Error sending email');
          }
        } catch (err) {
          // FAILURE: fade out the form, fade in the error result
          console.error('Error:', err);
          gridWrapper.classList.add('opacity-0', 'pointer-events-none');
          setTimeout(() => {
            gridWrapper.classList.add('hidden');
            resultBox.classList.remove('hidden');
            setTimeout(() => {
              resultBox.classList.remove('opacity-0');
            }, 50);
          }, 300);

          statusText.textContent = 'Sorry, something went wrong. Please try again.';
        }
      });
    });
  </script>
</Layout>
