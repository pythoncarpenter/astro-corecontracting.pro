---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';

// Replace these with dynamic content if desired (e.g., via frontmatter or CMS data)
const projectTitle = 'Spring Backyard Reno';
const projectDescription = 'This project involved a comprehensive backyard transformation. Our skilled team expertly demolished the existing deck and replaced it with precision-crafted wood deck sections integrated with a durable 8" concrete slab. The innovative design not only enhances the outdoor space with a fresh, modern aesthetic but also ensures long-lasting functionality and stability. Our commitment to quality craftsmanship resulted in a project that exceeded our clientâ€™s expectations.';
const gridImages = [
  '/images/page2_1.jpeg',
  '/images/page2_2.jpeg',
  '/images/page2_3.jpeg',
  '/images/page2_4.jpeg',
  '/images/page2_5.jpeg',
  '/images/page2_6.jpeg',
  '/images/page2_7.jpeg',
  '/images/page2_8.jpeg',
  '/images/page2_9.jpeg',
];
---
<Layout title={`Portfolio - ${projectTitle}`}>
  <div class="container mx-auto px-4 py-12">
    <!-- Project Title and Description -->
    <h1 class="text-4xl font-display text-center mb-4">{projectTitle}</h1>
    <p class="text-center mb-8 max-w-2xl mx-auto">{projectDescription}</p>

    <!-- 3x3 Image Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      {gridImages.map((image, index) => (
        <div class="overflow-hidden rounded-lg shadow">
          <img
            src={image}
            alt={`Project Image ${index + 1}`}
            class="w-full h-64 object-cover"
          />
        </div>
      ))}
    </div>

    <!-- Navigation Back to Main Portfolio -->
    <div class="mt-8 text-center">
      <a href="/portfolio" class="bg-wood-dark hover:bg-wood text-white px-6 py-3 rounded-lg transition-colors">
        Back to Portfolio
      </a>
    </div>
  </div>
</Layout>