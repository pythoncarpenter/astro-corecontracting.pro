---
export const prerender = false;

import Layout from '../../layouts/Layout.astro';

// Replace these with dynamic content if desired (e.g., via frontmatter or CMS data)
const projectTitle = 'Faux Maple Box Beams';
const projectDescription = 'This project transformed a traditional bathroom into a refined retreat featuring stunning maple beams. Our expert team seamlessly integrated these natural wood elements into the design, infusing the space with a warm, rustic charm while maintaining a modern aesthetic. The carefully installed maple beams serve as both a striking architectural feature and a subtle nod to timeless craftsmanship, resulting in a luxurious, one-of-a-kind bathroom that exceeded our clientâ€™s expectations.';
const gridImages = [
  '/images/sub/page3_1.jpeg',
  '/images/sub/page3_2.jpeg',
  '/images/sub/page3_3.jpeg',
  '/images/sub/page3_4.jpeg',
  '/images/sub/page3_5.jpeg',
  '/images/sub/page3_6.jpeg',
  '/images/sub/page3_7.jpeg',
  '/images/sub/page3_8.jpeg',
  '/images/sub/page3_9.jpeg',
];
---
<Layout title={`Portfolio - ${projectTitle}`}>
  <div class="container mx-auto px-4 py-12">
    <!-- Project Title and Description -->
    <h1 class="text-4xl font-display text-center mb-4">{projectTitle}</h1>
    <p class="text-center mb-8 max-w-2xl mx-auto">{projectDescription}</p>

    <!-- 3x3 Image Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      {gridImages.map((image, index) => (
        <div class="overflow-hidden rounded-lg shadow">
          <img
            src={image}
            alt={`Project Image ${index + 1}`}
            class="w-full h-64 object-cover"
          />
        </div>
      ))}
    </div>

    <!-- Navigation Back to Main Portfolio -->
    <div class="mt-8 text-center">
      <a href="/portfolio" class="bg-wood-dark hover:bg-wood text-white px-6 py-3 rounded-lg transition-colors">
        Back to Portfolio
      </a>
    </div>
  </div>
</Layout>