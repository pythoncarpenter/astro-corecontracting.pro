---
// No frontmatter needed for this component
---
<button class="theme-toggle-btn p-2 rounded focus:outline-none" aria-label="Toggle Light/Dark">
  <span class="theme-icon flex items-center justify-center"></span>
</button>

<script>
  // Define SVG icons
  const sunIcon = `
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"
         stroke="currentColor" stroke-width="2" stroke-linecap="round"
         stroke-linejoin="round" class="w-6 h-6 text-yellow-300">
      <circle cx="12" cy="12" r="5" />
      <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42" />
    </svg>
  `;

  const moonIcon = `
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"
         stroke="currentColor" stroke-width="2" stroke-linecap="round"
         stroke-linejoin="round" class="w-6 h-6 text-blue-700">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" />
    </svg>
  `;

  // Update all theme toggle icons across the page
  function updateAllToggleIcons(isDark) {
    document.querySelectorAll('.theme-icon').forEach((iconEl) => {
      iconEl.innerHTML = isDark ? sunIcon : moonIcon;
    });
  }

  // Set initial state based on <html> class (set by your layout)  
  const isDarkMode = document.documentElement.classList.contains('dark');
  updateAllToggleIcons(isDarkMode);

  // Function to toggle the theme
  function toggleTheme() {
    const currentlyDark = document.documentElement.classList.contains('dark');
    const newThemeIsDark = !currentlyDark;
    if (newThemeIsDark) {
      document.documentElement.classList.add('dark');
      localStorage.setItem('colorScheme', 'dark');
    } else {
      document.documentElement.classList.remove('dark');
      localStorage.setItem('colorScheme', 'light');
    }
    updateAllToggleIcons(newThemeIsDark);
  }

  // Attach the event listener to all toggle buttons (both desktop and mobile)
  document.querySelectorAll('.theme-toggle-btn').forEach((btn) => {
    btn.addEventListener('click', toggleTheme);
  });
</script>